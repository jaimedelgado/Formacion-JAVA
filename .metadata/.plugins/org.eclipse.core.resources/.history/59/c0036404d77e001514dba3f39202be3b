package com.crismirjai.gestionproductosspring.domain;

import java.util.Date;
/**
 * 29/10/2015
 * @author Miriam del Río 
 * @author Jaime Delgado
 * @author Christian Sánchez
 * Clase que modeliza un producto con código, nombre, fecha de alta del producto, precio y stock.
 */
public class Producto {
	private String codigo;
	private String nombre;
	private Date fechaAlta;
	private double precio;
	private int stock;
	/**
	 * Constructor sin argumentos
	 */
	public Producto(){
		
	}
	/**
	 * Constructor con todos los parámetros
	 * @param codigo Código del producto
	 * @param nombre Nombre del producto
	 * @param fechaAlta Fecha en la que se ha dado de alta el producto
	 * @param precio Precio del producto
	* @param stock Número de productos en stock
	*/
	public Producto(String codigo, String nombre, Date fechaAlta,
			double precio, int stock) {
		super();
		this.codigo = codigo;
		this.nombre = nombre;
		this.fechaAlta = fechaAlta;
		this.precio = precio;
		this.stock = stock;
	}
	/**
	 * Método que devuelve el código del producto
	 * @return Código del producto
	 */
	public String getCodigo() {
		return codigo;
	}
	/**
	 * Método que modifica el código del producto
	 * @param codigo
	 */
	public void setCodigo(String codigo) {
		this.codigo = codigo;
	}
	/**
	 * Método que devuelve el nombre del producto
	 * @return Nombre del producto
	 */
	public String getNombre() {
		return nombre;
	}
	/**
	 * Método que modifica el nombre del producto
	 * @param nombre Nombre del producto
	 */
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	/**
	 * Método que devuelve la fecha en la que se ha dado de alta el producto
	 * @return Fecha en la que se ha dado de alta el producto
	 */
	public Date getFechaAlta() {
		return fechaAlta;
	}
	/**
	 * Método que modifica la fecha en la que se ha dado de alta el producto
	 * @param fechaAlta Fecha en la que se ha dado de alta el producto
	 */
	public void setFechaAlta(Date fechaAlta) {
		this.fechaAlta = fechaAlta;
	}
	/**
	 * Método que devuelve el precio del producto
	 * @return Precio del producto
	 */
	public double getPrecio() {
		return precio;
	}
	/**
	 * Método que modifica el precio del producto
	 * @return Precio del producto
	 */
	public void setPrecio(double precio) {
		this.precio = precio;
	}
	/**
	 * Método que devuelve el número de productos en stock
	 * @return Número de productos en stock
	 */
	public int getStock() {
		return stock;
	}
	/**
	 * Método que modifica el número de productos en stock
	 * @return Número de productos en stock
	 */
	public void setStock(int stock) {
		this.stock = stock;
	}
	/**
	 * Método que devuelve la descripción del producto
	 */
	@Override
	public String toString() {
		return "Producto [codigo=" + codigo + ", nombre=" + nombre
				+ ", fechaAlta=" + fechaAlta + ", precio=" + precio
				+ ", stock=" + stock + "]";
	}
	
}
